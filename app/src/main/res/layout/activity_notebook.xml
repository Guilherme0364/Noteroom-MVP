<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!-- Imagem de fundo -->
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/__activity_subject_background" />

    <ImageView
            android:id="@+id/arrowIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/__arrow_back"
            android:contentDescription="@string/arrow_back" />

    <!-- Texto do título do app -->
    <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="CADERNOS"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    <!-- Menu de navegação (ícone de menu) -->
    <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/__plus_button"
            android:contentDescription="Plus" />

    <TextView
            android:id="@+id/appSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="92dp"
            android:layout_centerHorizontal="true"
            android:text="TÓPICOS"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textFontWeight="900" />


    <!-- Componente -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#60169A"
                    android:padding="8dp"
                    android:layout_marginTop="160dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_vertical">

        <ImageView
                android:id="@+id/notebookIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/__notebook_icon"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="Notebook Icon" />

        <TextView
                android:id="@+id/subjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/notebookIcon"
                android:layout_toStartOf="@id/editIcon"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Logaritmo"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center" />

        <ImageView
                android:id="@+id/editIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/__pencil_icon"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Edit Icon" />
    </RelativeLayout>





</RelativeLayout>
